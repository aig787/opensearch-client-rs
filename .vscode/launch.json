  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "DUmp Metadata",
      "cargo": {
        "args": ["build", "--bin=opensearch-cli", "--package=opensearch-cli"],
        "filter": {
          "name": "opensearch-cli",
          "kind": "bin"
        }
      },
      "args": ["-vv", "dump-metadata"],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
