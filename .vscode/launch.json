{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Dump",
      "cargo": {
        "args": ["build", "--bin=opensearch-cli", "--package=opensearch-cli"],
        "filter": {
          "name": "opensearch-cli",
          "kind": "bin"
        }
      },
      "args": ["-vv", "dump", "scala-entries"],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Restore",
      "cargo": {
        "args": ["build", "--bin=opensearch-cli", "--package=opensearch-cli"],
        "filter": {
          "name": "opensearch-cli",
          "kind": "bin"
        }
      },
      "args": [
        "-vv",
        "restore",
        "--mode=create",
        "--rename-index",
        "test",
        "output/scala-entries"
      ],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Dump Metadata",
      "cargo": {
        "args": ["build", "--bin=opensearch-cli", "--package=opensearch-cli"],
        "filter": {
          "name": "opensearch-cli",
          "kind": "bin"
        }
      },
      "args": ["-vv", "dump-metadata"],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Restore Metadata",
      "cargo": {
        "args": ["build", "--bin=opensearch-cli", "--package=opensearch-cli"],
        "filter": {
          "name": "opensearch-cli",
          "kind": "bin"
        }
      },
      "args": ["-vv", "restore-metadata"],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Fix Metadata",
      "cargo": {
        "args": ["build", "--bin=opensearch-cli", "--package=opensearch-cli"],
        "filter": {
          "name": "opensearch-cli",
          "kind": "bin"
        }
      },
      "args": ["-vv", "fix-metadata"],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "List Indices",
      "cargo": {
        "args": ["build", "--bin=opensearch-cli", "--package=opensearch-cli"],
        "filter": {
          "name": "opensearch-cli",
          "kind": "bin"
        }
      },
      "args": ["-vv", "list-indices"],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
